nav.projects-navigation
  .previous
    - prev_project = project.previous_article
    - if prev_project
      = link_to prev_project.path, rel: 'prev' do
        | Previous project
        br
        strong= prev_project.title
    - else
      | &nbsp;

  .next
    - next_project = project.next_article
    - if next_project
      = link_to next_project.path, rel: 'next' do
        | Next project
        br
        strong= next_project.title
    - else
      | &nbsp;
